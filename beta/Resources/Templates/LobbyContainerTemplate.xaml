        </Style.Triggers>
    </Style>-->
    <Style x:Key="Border" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource NavigationViewDefaultPaneBackground}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SystemControlPageBackgroundChromeMediumLowBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <DataTemplate x:Key="PlayerCard" d:DataType="{x:Type models:PlayerInfoMessage}">
        <Grid DataContext="{Binding Converter={StaticResource GetPlayerInfoConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding login}"/>
            <Grid DataContext="{Binding ratings[global], Converter={StaticResource RatingDifferenceConverter}, Mode=OneWay}"
                  Margin="10 0"
                  Grid.Column="1"
                  HorizontalAlignment="Right">
                <TextBlock Text="{Binding DisplayedRating, Mode=OneWay}"/>
            </Grid>
        </Grid>
    </DataTemplate>

